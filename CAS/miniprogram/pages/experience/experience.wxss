.container{
  width: 100%
}

.page{
  width: 94%;
  height: 1000rpx;
  display: flex;
  margin: 0 auto
}

.card{
  border: 1px solid #ebebeb;
  box-sizing: border-box;
  padding: 20rpx
}

.card image{
  width: 90%;
  height: 270rpx;
  margin: 0 auto;
  display: flex;
  padding-top: 50rpx
}

.title{
  display: flex;
  flex-wrap: wrap;
  width: 90%;
  margin: 0 auto
}

.title1{
  padding-right: 20rpx;
  font-size: 50rpx; 
  padding-top: 30rpx;
  color:black
}

.title2{
  padding-right: 20rpx;
  font-size: 50rpx;
  padding-top: 30rpx;
  color:rgb(15, 219, 192)
}

.title3{
  padding-right: 20rpx;
  font-size: 50rpx;
  padding-top: 30rpx;
  color:rgb(243, 150, 11)
}

.text{
  width: 90%;
  font-size: 30rpx;
  display: flex;
  margin: 0 auto;
  padding-top: 10rpx;
  color: black;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
}


/* pages/LO/LO.wxss */

.body{
  display: flex;
  flex-wrap: wrap;
}

.icons{
  width: 13%;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-right: 30rpx
}

.selected{
  width:100%;
  margin-top: 30rpx;
  background: #fff;
  border-radius:20rpx;
  
}

.selected image{
  width:100%;
  height:90rpx;
  margin:0 auto;
  border-radius: 100%;
  background: rgb(255, 174, 0);
  display: flex
}

.img{
  width: 100%;
  background: #fff
}

.subTitle{
  font-size: 24rpx;
  color: black;
  font-family: fantasy;
  font-weight: bold;
  text-align: center;
  padding-bottom: 7rpx
}

.selected.active{
 
}

.text{
  width: 60%;
  margin-left: 100rpx;
  
  animation-name: fadeIn;
  animation-delay: 0s;
  animation-duration: 1s
}

.title{
  font-size: 48rpx;
  font-weight: bold;
  font-family: fantasy;
  color: black;
  text-align: center
}

.main{
  font-size: 32rpx;
  font-family: fantasy;
  color: black;
  margin-top: 50rpx
}

.text{
  height: 500rpx
}

.img.active image{
  background: silver;
}


